@inherits LayoutComponentBase
<link rel="stylesheet" href="css/app.css" />

<section class="grid">
    <Logo />

    <MainHeader />

    <MenuProjects />



    <Menu />

    <main>
        @if (!Dss.Project.IsEmptyProject)
        {
            @Body
        }
        else
        {
            <div></div>
        }
    </main>

    <nav class="lower-menu"></nav>

    <Footer />
</section>

@code{
    [Inject]
    public IDssProjects Dss { get; set; }
    [Inject]
    public NavigationManager Navigation { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();

        Dss.OnSelectedProjectChanged += project => StateHasChanged();

        if (Dss.Project == null)
        {
            Dss.SelectEmptyProject();
        }
    }
}